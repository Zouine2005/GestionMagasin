<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" 
      spacing="20" style="-fx-background-color: #f8f9fa; -fx-padding: 25;"
      fx:controller="controllers.EditProductController"
      prefWidth="450">
    
    <!-- Form Header -->
    <Label text="Modifier Produit" 
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 10 0;"/>
    
    <!-- Form Fields -->
    <GridPane hgap="15" vgap="15" 
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 0);">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" hgrow="NEVER" prefWidth="120"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        
        <!-- Name Field -->
        <Label text="Nom*:" 
               style="-fx-text-fill: #555; -fx-font-weight: bold;" 
               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" 
                  style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd; -fx-padding: 8;" 
                  GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <!-- Description Field -->
        <Label text="Description:" 
               style="-fx-text-fill: #555; -fx-font-weight: bold;" 
               GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="descriptionField" 
                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd; -fx-padding: 8;" 
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <!-- Price Field -->
        <Label text="Prix*:" 
               style="-fx-text-fill: #555; -fx-font-weight: bold;" 
               GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" 
                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd; -fx-padding: 8;" 
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        
        <!-- Quantity Field -->
        <Label text="QuantitÃ©*:" 
               style="-fx-text-fill: #555; -fx-font-weight: bold;" 
               GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="quantityField" 
                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd; -fx-padding: 8;" 
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        
        <!-- Image Field -->
        <Label text="Image:" 
               style="-fx-text-fill: #555; -fx-font-weight: bold;" 
               GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <HBox spacing="10" alignment="CENTER_LEFT" GridPane.rowIndex="4" GridPane.columnIndex="1">
            <TextField fx:id="imagePathField" 
                      style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd; -fx-padding: 8; -fx-pref-width: 250;"/>
            <Button text="Parcourir" onAction="#handleBrowseImage" 
                   style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;"/>
        </HBox>
        
    </GridPane>
    
    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#handleCancel" 
               style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 25;"/>
        <Button text="Enregistrer" onAction="#handleSave" 
               style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 25;"/>
    </HBox>
    
    <!-- Footer Note -->
    <Label text="* Champs obligatoires" 
           style="-fx-font-style: italic; -fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
</VBox>